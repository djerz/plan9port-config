#!/bin/bash

# Pylsp wrapper to run pylsp when it is installed in some Conda environment
# Modify the paths below as needed. Assumes environment is not the default one

CONDA_INSTALL_DIR=${HOME}/mambaforge
CONDA_ENVIRONMENT=${CONDA_DEFAULT_ENV:-pyenv}
source "${CONDA_INSTALL_DIR}/etc/profile.d/conda.sh"
conda activate "${CONDA_ENVIRONMENT}"
$CONDA_INSTALL_DIR/envs/$CONDA_ENVIRONMENT/bin/pylsp "$@"
