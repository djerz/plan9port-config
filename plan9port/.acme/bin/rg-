#!/bin/sh

# Run rg on current Acme window contents with plumbable output
# Requires ripgrep and realpath be installed on the system
# Note that for open modified files, the unsaved version is searched

if [ "$winid" = "" ]; then
	echo 'must be used from within acme' 1>&2
	exit 1
fi

if ! command -v rg >/dev/null 2>&1; then
	echo 'rg not installed' 1>&2
	exit 1
fi

# GNU version of realpath is needed, so use grealpath on macOS
# installable via the coreutils package using MacPorts or Homebrew
REALPATHCMD=realpath
if [ "$(uname)" = "Darwin" ]; then
	REALPATHCMD=grealpath
fi

if ! command -v $REALPATHCMD >/dev/null 2>&1; then
	echo "$REALPATHCMD not installed" 1>&2
	exit 1
fi

if [ "$#" -eq 0 ]; then
	cat << EOF >&2
Usage: rg- [OPTIONS..] PATTERN
See ripgrep help (\`rg --help\`) for available options
EOF
	exit 1
fi

RELATIVEPATH=`$REALPATHCMD --relative-to="$PWD" "$samfile"`

9p read acme/$winid/body | \
  rg --no-heading --color=never --line-number "$@" | \
  sed 's|^|'$RELATIVEPATH':|'
